<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <!-- Header: User Info -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postUserAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_default_profile_pic"
            app:civ_border_color="#C0C0C0"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/postUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/postTimestamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toBottomOf="@id/postUserAvatar"
            app:layout_constraintTop_toTopOf="@id/postUserAvatar"
            tools:text="Tapaswini" />

        <TextView
            android:id="@+id/postTimestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/postUserAvatar"
            app:layout_constraintEnd_toEndOf="@id/postUserName"
            app:layout_constraintStart_toBottomOf="@id/postUserAvatar"
            app:layout_constraintTop_toBottomOf="@id/postUserName"
            tools:text="5 minutes ago" />

        <!-- Post Text Content -->
        <TextView
            android:id="@+id/postTextContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postUserAvatar"
            tools:text="This is my first post on the new Trendsy app! I'm excited to share my fashion journey." />

        <!-- Media Content (Image or Video Thumbnail) -->
        <ImageView
            android:id="@+id/postMedia"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:background="#EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postTextContent"
            tools:src="@tools:sample/backgrounds/scenic"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>